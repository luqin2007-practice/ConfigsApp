<Window x:Class="Configs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <CollectionViewSource Source="{Binding Path=Apps}" x:Key="AppList"/>
    </Window.Resources>
    <DockPanel>
        <ScrollViewer Name="AppButtons" DockPanel.Dock="Left" Width="100" VerticalScrollBarVisibility="Auto" />
        <Grid DockPanel.Dock="Right" MinWidth="100" DataContext="{Binding }">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListBox Grid.Row="0" Name="Presets" />
            <Button Grid.Row="1" Name="AddPreset">添加</Button>
            <Button Grid.Row="2" Name="RemovePreset">删除</Button>
        </Grid>
        <ScrollViewer Name="MainPage" VerticalScrollBarVisibility="Auto" />
    </DockPanel>
</Window>